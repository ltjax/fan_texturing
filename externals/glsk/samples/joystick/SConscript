#!/usr/bin/env python
import os
Import('env', 'platform' )

myenv = env.Copy()

# This will make the source file include windows.h before gl.h
if ( platform=='win32' and myenv['CC']=='cl' ):
	myenv.Append( CCFLAGS =['/DAPIENTRY=__stdcall','/DWINGDIAPI=__declspec(dllimport)'])
	myenv.Append( LINKFLAGS = ['/SUBSYSTEM:WINDOWS'] )
	myenv.Append( LIBPATH = ['#/lib' ] )
	myenv.Append( LIBS = ['glsk','opengl32','kernel32','gdi32','dinput8','user32','libboost_signals-vc80-mt-s'] )

if ( platform=='linux2' ):
	myenv.ParseConfig( 'pkg-config --libs --cflags glsk' )

Default( myenv.Program('sample-joystick.cpp') )

